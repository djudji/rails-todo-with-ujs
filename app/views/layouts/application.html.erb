<!DOCTYPE html>
<html>
  <head>
    <title>BoardsTodo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "//cloud.github.com/downloads/lafeber/world-flags-sprite/flags32.css" %>
    
  </head>

  <body>
	  <%= render 'layouts/navigation' %>
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-2 col-md-2">
					<h1><%= link_to root_path do %><span class="fa fa-check-square"></span> To-Do<% end %></h1>
        	<%= link_to 'New Task', new_task_path,  { class:"btn btn-md btn-primary", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window' }  %>
				</div>
				<div class="col-lg-10 col-md-10">
					<%= yield %>
				</div>
			</div>
		</div>
    
  </body>
</html>
