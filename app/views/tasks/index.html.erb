<% if user_signed_in? %>
  <div class="container">
    <div class="row">
      
      <div class="col-md-12">
        <% @tasks.each do |task| %>

          <div class="container">
            <div class="row">
              <div class="col-md-2">
                <div class="pull-right">
                  <span class="glyphicon glyphicon-option-vertical"></span>
                  <span class="glyphicon glyphicon-option-vertical move-closer"></span>
                  <span class="checkbox-inline checkbox-align">
                      <%= form_for task do |f| %>
                        <%= f.check_box :finished %>
                      <% end %>
                  </span>
                </div>
              </div>
              <div class="col-md-8">
                <%= link_to edit_task_path(task) do %>
                  <span class="task-title"><%= task.title %></span><br />
                  <span class="task-description"><%= task.description %></span>
                <% end %>
                <p class="tags"><% task.tags.each do |tag| %><span><%= tag.title %></span> <% end %></p>
              </div>
              <div class="col-md-2">
                <span class="fa fa-exclamation-circle act-important"></span>
                <span class="fa fa-star act-starred"></span>
                <span class="glyphicon glyphicon-option-vertical act-additional"></span>
              </div> 
            </div>
          </div>
          
        <% end %>
      </div>

      <div class="col-md-12">
        <%= link_to 'New Task', new_task_path, class:"btn btn-md btn-primary" %>
      </div>

    </div>
  </div>
<% end %>
